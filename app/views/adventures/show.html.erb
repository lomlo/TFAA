<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <div class="synopsis_text">
      <%= @adventure.synopsis %>
    </div>
    <div class="form_play">
      <% if @first_chapter %>
        <%= link_to "Play", adventure_chapter_path(@adventure, @first_chapter), class: "play_button"%>
      <% end %>
      <% if current_user && @adventure.user_id == current_user.id %>
        <%= link_to "Edit", adventure_design_path(@adventure), class: "play_button" %>
      <% end %>
    </div>
  </body>
</html>
