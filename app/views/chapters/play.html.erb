<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <div class="chapter_container">
      <%= @chapter.description %>
    </div>
    <br>
    <div class="choices_container">
      <% @choices.each do |choice| %>
        <%= link_to "#{choice.option}", "#{@chapter.id}/#{choice.resulting_chapter_id}", id:"#{choice.id}", class:"button", onClick: "makeChoice(event)" %>
      <% end %>
    </div>
  </body>
  <%= javascript_include_tag "application" %>

</html>
