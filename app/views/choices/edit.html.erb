<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>

    <div class="design_registration_forms">

      <div class="design_form_edit_chapter">
        <h2 class="design_sign_up_h2">Update Choice</h2>
        <%= image_tag "pen.png", id: "book_image"  %>
      </div>

      <%= form_for [@adventure, @chapter, @choice] do |form| %>
      <div class="design_field">
        <%= form.label :option %>
      </div>
      <div class="design_field">
        <%= form.text_area :option %>
      </div>
      <div class="design_field">
        <%= form.button :submit %>
      </div>
      <% end %>
    </div>
  </body>
</html>
